@model IEnumerable<WebApplication8.Models.slider>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center my-4">Slider Listesi</h2>

<p class="text-end">
    <!-- Yeni Slider Ekle Butonu: Zümrüt Yeşili (#50C878) Arka Plan ve Beyaz Yazı -->
    @Html.ActionLink("Yeni Slider Ekle", "Create", null, new { @class = "btn btn-success", @style = "background-color: #50C878; color: white; border: none;" })
</p>

<table class="table table-striped table-hover">
    <!-- Tablo Başlıkları için Zümrüt Yeşili (#50C878) Arka Plan ve Beyaz Yazı Rengi -->
    <thead style="background-color: #50C878; color: white;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.imgUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.baslik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bilgi)
            </th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.imgUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.baslik)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.bilgi)
                </td>
                <td class="text-center">
                    <div class="btn-group" role="group">
                        <!-- Düzenle Butonu: Zümrüt Yeşili (#50C878) Arka Plan ve Beyaz Yazı -->
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-sm", @style = "background-color: #50C878; color: white; border: none;" })

                        <!-- Detaylar Butonu: Zümrüt Yeşili (#50C878) Arka Plan ve Beyaz Yazı -->
                        @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm", @style = "background-color: #50C878; color: white; border: none;" })

                        <!-- Sil Butonu: Zümrüt Yeşili (#50C878) Arka Plan ve Beyaz Yazı -->
                        @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm", @style = "background-color: #50C878; color: white; border: none;" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
