@model IEnumerable<WebApplication8.Models.Ilce>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center my-4">İlçeler Listesi</h2>

<p class="text-end">
    <!-- 1. Yeni İlçe Ekle Butonu: Zümrüt Yeşili (#50C878) Arka Plan ve Beyaz Yazı -->
    @Html.ActionLink("Yeni İlçe Ekle", "Create", null, new { @class = "btn btn-success", @style = "background-color: #50C878; color: white; border: none;" })
</p>

<table class="table table-striped table-hover">
    <!-- 2. Tablo Başlıkları için Zümrüt Yeşili (#50C878) Arka Plan ve Beyaz Yazı Rengi -->
    <thead style="background-color: #50C878; color: white;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ilceAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.aciklama)
            </th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ilceAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.aciklama)
                </td>
                <td class="text-center">
                    <div class="btn-group" role="group">
                        <!-- 3. Düzenle Butonu: Zümrüt Yeşili (#50C878) Arka Plan ve Beyaz Yazı -->
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-sm", @style = "background-color: #50C878; color: white; border: none;" })

                        <!-- 4. Detaylar Butonu: Zümrüt Yeşili (#50C878) Arka Plan ve Beyaz Yazı -->
                        @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm", @style = "background-color: #50C878; color: white; border: none;" })

                        <!-- 5. Sil Butonu: Zümrüt Yeşili (#50C878) Arka Plan ve Beyaz Yazı -->
                        @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm", @style = "background-color: #50C878; color: white; border: none;" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
