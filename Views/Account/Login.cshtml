@using WebApplication8.Models
@model LoginViewModel
@{
    ViewBag.Title = "Oturum Açın";
}

<main aria-labelledby="title">
    <h2 id="title" class="text-center text-success">@ViewBag.Title</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <section id="loginForm" class="p-4">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                            @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label" })
                        </div>
                    </div>

                    <div class="mb-3">
                        <input type="submit" value="Oturum aç" class="btn btn-outline-success w-100" />
                    </div>

                    <!-- Yeni kullanıcı kaydı için buton -->
                    <div class="mb-3">
                        <button type="button" class="btn btn-outline-success w-100" onclick="window.location.href='@Url.Action("Register", "Account")'">
                            Yeni bir kullanıcı olarak kaydol
                        </button>
                    </div>
                }
            </section>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    /* Giriş formunun genel stili */
    #loginForm {
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
    }

    /* Butonların hover durumu */
    .btn-outline-success {
        border-color: #28a745;
        color: #28a745;
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-outline-success:hover {
            background-color: #28a745;
            color: white;
        }

    /* Giriş başlığı */
    #title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    /* Ortalamak için text-center ve yeşil renk */
    .text-center {
        text-align: center;
    }

    .text-success {
        color: #28a745 !important;
    }
</style>
